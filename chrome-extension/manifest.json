{
  "manifest_version": 3,
  "name": "Meeting AI Assistant",
  "version": "1.0.0",
  "description": "Real-time meeting transcription and AI analysis for Google Meet",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "notifications",
    "tabCapture",
    "offscreen"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "http://localhost:3002/*",
    "http://127.0.0.1:3002/*"
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["config.js", "scripts/content.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["http://localhost:3002/results*", "http://127.0.0.1:3002/results*"],
      "js": ["scripts/results-loader.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["scripts/injected.js", "scripts/injected-recorder.js"],
      "matches": ["https://meet.google.com/*"]
    }
  ]
}

